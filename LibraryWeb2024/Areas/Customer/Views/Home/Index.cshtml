@model IEnumerable<Product>

<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <a asp-action="Details" asp-route-id="@product.Id" class="book-link">
                        <div class="card border-0 p-3 shadow border-top border-5 rounded">
                            <img src="@product.ImageUrl" class="card-img-top rounded" />
                            <div class="card-body pb-0"> 
                                <div class="pl-1">
                                    <p class="card-title h5 text-dark opacity-75 text-uppercase">@product.Title</p>
                                    <p class="card-title text-warning">@product.Author</p>
                                    <p class="card-title h5 text-dark opacity-75 text-uppercase">@product.Price zł</p>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    }
</div>